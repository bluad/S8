<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/persion_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 个人中心 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/per_setting_back"
                android:layout_width="55px"
                android:layout_height="55px"
                android:src="@mipmap/back"
                android:layout_marginLeft="30px"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/persion_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Individual_center"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/setting_img"
                android:layout_width="55px"
                android:layout_height="55px"
                android:src="@mipmap/setting"
                android:layout_marginRight="27px"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <!--个人信息-->
        <LinearLayout
            android:id="@+id/personal_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/personal_driver_pic"
                android:layout_width="157px"
                android:layout_height="157px"
                android:layout_marginRight="30px"
                android:layout_marginLeft="40px"
                android:src="@mipmap/driver_pic"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="50px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginRight="20px"
                            android:text="@string/name"/>
                        <TextView
                            android:id="@+id/personal_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginRight="20px"
                            android:text="@string/plate"/>
                        <TextView
                            android:id="@+id/personal_vehicleNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginRight="20px"
                            android:text="@string/job_no"/>
                        <TextView
                            android:id="@+id/personal_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginRight="20px"
                            android:text="@string/car_type"/>
                        <TextView
                            android:id="@+id/personal_vehicleType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_marginTop="40px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Monthly_income"/>

                <TextView
                    android:id="@+id/personal_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Amount_to_be_settled"/>

            <TextView
                android:id="@+id/personal_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_marginTop="3px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:text="@string/Taken_count"/>
        <TextView
            android:id="@+id/personal_missionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_marginTop="3px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:text="@string/Unfinished"/>
        <TextView
            android:id="@+id/personal_unfinishedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_marginTop="3px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:text="@string/At_work"/>

        <ImageView
            android:id="@+id/personal_jiedan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_modify_password"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_marginTop="3px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:text="@string/Change_password"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/suggest_back"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_marginTop="3px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:text="@string/suggest_back"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_sys_set"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_marginTop="3px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:text="@string/language_settings"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:text="@string/Current_version"/>

        <TextView
            android:id="@+id/personal_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.01"/>

    </LinearLayout>

    <Button
        android:id="@+id/personal_exit"
        android:layout_width="match_parent"
        android:layout_height="85px"
        android:layout_marginTop="40px"
        android:background="@mipmap/login_out"
        android:text="@string/Sign_out"
        android:textSize="20sp"/>

</LinearLayout>