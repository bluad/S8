<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sign1"
    android:orientation="vertical" >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300px"
            android:src="@drawable/finger_finger" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_height="wrap_content"
            android:layout_marginTop="364px"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ed_text"
                android:layout_width="wrap_content"
                android:layout_height="112px"
                android:background="@mipmap/shuru"
                android:ems="10"
                android:hint="请输入产品序列号"
                android:paddingLeft="60dp"
                android:singleLine="true" >
                <requestFocus />
            </EditText>

            <TextView
                android:layout_marginTop="40px"
                android:id="@+id/rl_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="112px"
                android:background="@drawable/finish_finish" />
        </LinearLayout>
  

</LinearLayout>