<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/modify_pwd"
    android:orientation="vertical" >

    <!-- title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="20px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/password_modify_return"
            android:layout_width="55px"
            android:layout_height="55px"
            android:src="@mipmap/back"
            android:layout_marginLeft="25px"
            android:layout_marginTop="18px"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/persion_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_modify"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/modify_old_password"
            android:layout_width="match_parent"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_height="100px"
            android:layout_marginTop="180px"
            android:background="@drawable/edittext_border_blue"
            android:hint="@string/old_password"
            android:paddingLeft="24px"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:imeOptions="actionSearch"
            android:singleLine="true" />

        <EditText
            android:id="@+id/modify_new_password"
            android:layout_width="match_parent"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_height="100px"
            android:layout_marginTop="90px"
            android:paddingLeft="24px"
            android:inputType="textPassword"
            android:background="@drawable/edittext_border_blue"
            android:layout_below="@+id/modify_old_password"
            android:layout_centerHorizontal="true"
            android:hint="@string/new_password"
            android:imeOptions="actionSearch"
            android:singleLine="true" />

        <EditText
            android:id="@+id/modify_new_password1"
            android:layout_width="match_parent"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_height="100px"
            android:layout_marginTop="90px"
            android:inputType="textPassword"
            android:layout_below="@+id/modify_new_password"
            android:background="@drawable/edittext_border_blue"
            android:layout_centerHorizontal="true"
            android:hint="@string/re_new_pass"
            android:paddingLeft="24px"
            android:imeOptions="actionSearch"
            android:singleLine="true" />


        <Button
            android:id="@+id/modify_password_button"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/modify_new_password1"
            android:layout_marginTop="180px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/shuru"
            android:text="@string/save"
            android:textSize="23sp"/>

    </RelativeLayout>

</LinearLayout>