<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <!-- title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/blue"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/task_express_info_return"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/back"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/persion_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Mission_detail"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/task_express_info_list"
            android:layout_width="match_parent"
            android:layout_height="900px"
            android:scrollbars="none"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/task_express_info_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/login_out"
            android:text="@string/Send_out"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>