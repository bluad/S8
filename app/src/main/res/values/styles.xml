<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 白色字体 -->
    <style name="WhiteTextColor">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- 标题字体，超大号、白色 -->
    <style name="TitleTextStyle" parent="@style/WhiteTextColor">
        <item name="android:textSize">@dimen/textSize_xlarge</item>
    </style>
    <!-- 白色大号字体 -->
    <style name="WhiteLargeTextStyle" parent="@style/WhiteTextColor">
        <item name="android:textSize">@dimen/textSize_large</item>
    </style>
    <!-- 白色超大号字体 -->
    <style name="WhiteXLargeTextStyle" parent="@style/WhiteTextColor">
        <item name="android:textSize">@dimen/textSize_xlarge</item>
    </style>
    <!-- 标题按钮字体，中号、白色 -->
    <style name="WhiteMiddleTextStyle" parent="@style/WhiteTextColor">
        <item name="android:textSize">@dimen/textSize_middle</item>
    </style>
    <!-- 标题按钮字体，小号、白色 -->
    <style name="WhiteSmallTextStyle" parent="@style/WhiteTextColor">
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>
    <!-- 标题按钮字体，稍小号、白色 -->
    <style name="WhiteMSmallTextStyle" parent="@style/WhiteTextColor">
        <item name="android:textSize">@dimen/textSize_msmall</item>
    </style>
    <!-- 标题按钮字体，最小号、白色 -->
    <style name="WhiteLSmallTextStyle" parent="@style/WhiteTextColor">
        <item name="android:textSize">@dimen/textSize_lsmall</item>
    </style>
    <!-- 黑色字体 -->
    <style name="BlackTextColor">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!-- 黑色大号字体 -->
    <style name="BlackLargeTextStyle" parent="@style/BlackTextColor">
        <item name="android:textSize">@dimen/textSize_large</item>
    </style>

    <style name="BlackXLargeTextStyle" parent="@style/BlackTextColor">
        <item name="android:textSize">@dimen/textSize_xlarge</item>
    </style>

    <!-- 黑色中号字体 -->
    <style name="BlackMiddleTextStyle" parent="@style/BlackTextColor">
        <item name="android:textSize">@dimen/textSize_middle</item>
    </style>

    <!-- 黑色小号字体 -->
    <style name="BlackSmallTextStyle" parent="@style/BlackTextColor">
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>
    <!-- 黑色中小号字体 -->
    <style name="BlackMSmallTextStyle" parent="@style/BlackTextColor">
        <item name="android:textSize">@dimen/textSize_msmall</item>
    </style>
    <!-- 黑色最小号字体 -->
    <style name="BlackLSmallTextStyle" parent="@style/BlackTextColor">
        <item name="android:textSize">@dimen/textSize_lsmall</item>
    </style>
    <!-- 红色字体 -->
    <style name="RedTextColor">
        <item name="android:textColor">@color/red</item>
    </style>
    <!-- 红色小号字体 -->
    <style name="RedSmallTextStyle" parent="@style/RedTextColor">
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>
    <!-- 红色小号字体 -->
    <style name="RedLSmallTextStyle" parent="@style/RedTextColor">
        <item name="android:textSize">@dimen/textSize_lsmall</item>
    </style>

    <!-- 灰色字体 -->
    <style name="GrayTextColor">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <!-- 灰色大号字体 -->
    <style name="GrayLargeTextStyle" parent="@style/GrayTextColor">
        <item name="android:textSize">@dimen/textSize_large</item>
    </style>

    <!-- 灰色中号字体 -->
    <style name="GrayMiddleTextStyle" parent="@style/GrayTextColor">
        <item name="android:textSize">@dimen/textSize_middle</item>
    </style>

    <!-- 灰色小号字体 -->
    <style name="GraySmallTextStyle" parent="@style/GrayTextColor">
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <!-- 灰色中小号字体 -->
    <style name="GrayMSmallTextStyle" parent="@style/GrayTextColor">
        <item name="android:textSize">@dimen/textSize_msmall</item>
    </style>

    <!-- 灰色最小号字体 -->
    <style name="GrayLSmallTextStyle" parent="@style/GrayTextColor">
        <item name="android:textSize">@dimen/textSize_lsmall</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
    <!-- Elena_wang end -->
    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
