<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sign2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_marginLeft="76px"
        android:layout_marginRight="76px"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_below_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="70dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ico_logo" />

        <TextView
            android:id="@+id/tv_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_below_arrow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="116px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/shuru"
                android:gravity="left|center"
                android:drawableLeft="@mipmap/zhanghao"
                android:paddingLeft="30dp"
                android:hint="@string/account"
                android:singleLine="true" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_user_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <EditText
                android:drawableLeft="@mipmap/mima"
                android:paddingLeft="30dp"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="116px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/shuru"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:singleLine="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/spiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="116px"
            android:layout_below="@id/rl_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/denglu_denglu"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/login"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>