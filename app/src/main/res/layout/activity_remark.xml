<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/blue"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/remark_content_return"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/back"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/persion_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mark_info"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>



    <EditText
        android:id="@+id/remark_content"
        style="@style/BlackSmallTextStyle"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:background="@drawable/edittext_grey"
        android:hint="@string/customer_remark"
        android:layout_marginTop="100px"
        android:paddingLeft="15dp" />


        <Button
            android:id="@+id/remark_commit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="50px"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/commit"
            android:textSize="20sp" />

</LinearLayout>