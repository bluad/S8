<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="#28a8ff" >

            <TextView
                style="@style/BlackMSmallTextStyle"
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                android:drawableLeft="@mipmap/dress"
                android:gravity="center"
                android:text="@string/Positioning"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/index_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="20sp" />


                <ImageView
                    android:id="@+id/img"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:src="@drawable/people_people" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.youth.banner.Banner
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:image_scale_type="center_crop"
                    app:indicator_drawable_selected="@drawable/selected_radius"
                    app:title_background="#555CB85C" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="@drawable/edittext_border_blue_000"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/query"
                    style="@style/BlackMiddleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"
                    android:background="@mipmap/search_small"
                    android:gravity="center"
                    android:scaleX="0.9"
                    android:scaleY="0.9" />

                <EditText
                    android:id="@+id/main_express_no"
                    android:layout_width="180dp"
                    android:layout_height="74px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/main_input_number"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColorHint="@color/itc_text_color_hint" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_margin="14px"
                    android:background="@color/gray_line" />

                <ImageView
                    android:id="@+id/scan_strip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/saosao" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_notice"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="52px"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_tongzhi_message"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_gravity="center"
                    android:src="@mipmap/tongzhi" />

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:gravity="center"
                    android:text="@string/announcement"
                    android:textColor="@color/bgColor_overlay"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_margin="40px"
                android:background="@color/gray_line" />

            <TextView
                android:id="@+id/tv_notice_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="@string/latest_news"
                android:textColor="@color/bgColor_overlay"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/white"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    style="@style/BlackLSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:gravity="center"
                    android:textColor="@color/red" />
                <TextView
                    android:id="@+id/tips"
                    style="@style/BlackLSmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:gravity="center"
                    android:textColor="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/jiedan_number"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:layout_width="140px"
                        android:layout_height="140px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/paidan"
                            android:layout_width="133px"
                            android:layout_height="133px"
                            android:src="@drawable/daishou_daishou" />

                        <TextView
                            android:id="@+id/paidan_text"
                            style="@style/GraySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18px"
                            android:text="@string/Take_order"
                            android:textColor="@android:color/black" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/tihuo_number"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:layout_width="140px"
                        android:layout_height="140px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/task"
                        android:layout_width="133px"
                        android:layout_height="133px"
                        android:src="@drawable/shoujian_shoujian" />

                    <TextView
                        style="@style/GraySmallTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:gravity="center"
                        android:text="@string/Pick_up"
                        android:textColor="@android:color/black" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/daohuo_number"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:layout_width="140px"
                        android:layout_height="140px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/fache"
                            android:layout_width="133px"
                            android:layout_height="133px"
                            android:src="@drawable/daojian_daojian" />

                        <TextView
                            style="@style/GraySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18px"
                            android:text="@string/Arrive"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/wanchen_number"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:layout_width="140px"
                        android:layout_height="140px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/completion"
                            android:layout_width="133px"
                            android:layout_height="133px"
                            android:src="@drawable/fajian_fajian" />

                        <TextView
                            style="@style/GraySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18px"
                            android:text="@string/Finished"
                        android:textColor="@android:color/black" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/wentidan_number"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="20px"
                        android:layout_width="100px"
                        android:layout_height="100px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/problem"
                        android:layout_width="133px"
                        android:layout_height="133px"
                        android:src="@drawable/wtj_wtj" />

                    <TextView
                        style="@style/GraySmallTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:text="@string/Issue"
                        android:textColor="@android:color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/unread_message"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:layout_width="140px"
                        android:layout_height="140px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                        <ImageView
                            android:id="@+id/jiesuan"
                            android:layout_width="133px"
                            android:layout_height="133px"
                            android:src="@drawable/paijian_paijian" />

                        <TextView
                            style="@style/GraySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18px"
                            android:text="@string/messages1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/tongji_number"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="20px"
                        android:layout_width="100px"
                        android:layout_height="100px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/tongji"
                        android:layout_width="133px"
                        android:layout_height="133px"
                        android:src="@drawable/qianshou_qianshou" />

                    <TextView
                        style="@style/GraySmallTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:text="@string/Count"
                        android:textColor="@android:color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="133px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.mantoo.yican.widget.NumImageView
                        android:id="@+id/caiwu_number"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="20px"
                        android:layout_width="100px"
                        android:layout_height="100px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                    <ImageView
                            android:id="@+id/caiwu"
                            android:layout_width="133px"
                            android:layout_height="133px"
                            android:src="@drawable/chaxun_chaxun" />

                        <TextView
                            style="@style/GraySmallTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18px"
                            android:text="@string/Finance"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>